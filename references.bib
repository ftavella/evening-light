	pmcid = {PMC4313820},
	keywords = {Adult, chronobiology, Circadian Rhythm, digital media, electronics, Female, Humans, Lighting, Male, Melatonin, phase-shifting, Reading, sleep, Sleep, Sleep Wake Disorders},
	pages = {1232--1237},
	file = {Full Text:C\:\\Users\\tavel\\Zotero\\storage\\RZ62PKBS\\Chang et al. - 2015 - Evening use of light-emitting eReaders negatively .pdf:application/pdf},
}

@article{st_hilaire_physiologically_2007,
