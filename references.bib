	author = {St Hilaire, Melissa A. and Gronfier, Claude and Zeitzer, Jamie M. and Klerman, Elizabeth B.},
	year = {2007},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1600-079X.2007.00477.x},
	keywords = {circadian, mathematical models, melatonin, pineal, plasma, saliva, suppression},
	pages = {294--304},
	file = {Full Text PDF:C\:\\Users\\tavel\\Zotero\\storage\\I7CCVGAN\\St Hilaire et al. - 2007 - A physiologically based mathematical model of mela.pdf:application/pdf;Snapshot:C\:\\Users\\tavel\\Zotero\\storage\\SARHQ7QG\\j.1600-079X.2007.00477.html:text/html},
